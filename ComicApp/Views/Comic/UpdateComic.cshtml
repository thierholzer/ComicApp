@model ComicApp.ViewModels.ComicViewModel

@{
    ViewBag.Title = "UpdateComic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Comic</h2>

@using (Html.BeginForm("UpdateComic", "Comic", FormMethod.Post, new { id = "updateComic" }))
{
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Select a Comic Book:</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.SelectedComic.Id, new SelectList(Model.Comics, "Id", "Name"), new { id = "ddlComics" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedComic.Name, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.SelectedComic.Name)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedComic.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.SelectedComic.Description)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.SelectedComic.IssueNumber, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.SelectedComic.IssueNumber, new { type = "number", step = "any" })
        </div>
    </div>
    <input type="submit" value="submit" id="btnUpdate" />
}
